<div class="entry clearfix">
  <h4><%= link_to entry.name , recipe_path(entry) %></h4>
  <div class="photo">
  <% if entry.image? %>
    <%= link_to image_tag(entry.image.url(:thumb)), recipe_path(entry),
                :title => entry.description %>
  <% end %>
  </div>
  <div class="content" >
    <p>
      <% unless entry.ingredients.nil? %>
        <% entry.ingredients.each do |i| %>
          <%= i.name %>,
        <% end %>
      <% end %>
    </p>
    <%= button_to "delete",{:controller =>"menus", :action => :destroy, :id => entry.id},
                            :method => :delete ,:class =>"delete-button" %>
  </div>
</div>
